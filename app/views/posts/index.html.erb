<div class="row">
  <% for post in @posts %>
    <div class="col-3">
      <h4>
      <% user=User.find_by({"id"=>post["user_id"]})%>
        <%if user !=nil%>
          <%= user["first_name"]%>
      <%else%>
         anonymous
      <%end%>

      </h4>
      <img src="<%= post["image"] %>" class="img-fluid w-full">
      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>